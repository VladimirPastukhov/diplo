<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="vvp.diplom.draft2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_sportspring"
            android:logo="@drawable/ic_sportspring">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.TournamentsActivity"
            android:label="@string/tournaments_title"
            android:icon="@drawable/ic_sportspring"
            android:logo="@drawable/ic_sportspring">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.LoginActivity" />
        </activity>

        <activity
            android:name=".activities.RoundsActivity"
            android:label="@string/rounds_title"
            android:icon="@drawable/ic_sportspring"
            android:logo="@drawable/ic_sportspring">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TournamentsActivity" />
        </activity>

        <activity
            android:name=".activities.MatchesActivity"
            android:label="@string/matches_title"
            android:icon="@drawable/ic_sportspring"
            android:logo="@drawable/ic_sportspring">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.RoundsActivity" />
        </activity>

        <activity
            android:name=".activities.MatchSummaryActivity"
            android:label="@string/matches_title"
            android:icon="@drawable/ic_sportspring"
            android:logo="@drawable/ic_sportspring">
            <!--<meta-data-->
                <!--android:name="android.support.PARENT_ACTIVITY"-->
                <!--android:value=".activities.RoundsActivity" />-->
        </activity>

        <activity
            android:name=".activities.MatchPlayersActivity"
            android:label="@string/matches_title"
            android:icon="@drawable/ic_sportspring"
            android:logo="@drawable/ic_sportspring">
            <!--<meta-data-->
            <!--android:name="android.support.PARENT_ACTIVITY"-->
            <!--android:value=".activities.RoundsActivity" />-->
        </activity>

    </application>

</manifest>
