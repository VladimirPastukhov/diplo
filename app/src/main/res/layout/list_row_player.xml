<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/list_row_padding_top_bottom_players"
    android:paddingBottom="@dimen/list_row_padding_top_bottom_players"
    android:paddingLeft="@dimen/list_row_padding_left"
    android:paddingRight="@dimen/list_row_padding_left">

    <CheckBox android:id="@+id/checkbox_player"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/medium_text"
        android:lines="1"
        android:ellipsize="end"
        android:text="Иванов Иван Иванович"/>

    <RadioButton android:id="@+id/radio_is_captain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_horizontal_margin"
        android:textSize="@dimen/medium_text"
        android:text="@string/is_captain"/>

    <CheckBox android:id="@+id/checkbox_is_goalkeeper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_horizontal_margin"
        android:textSize="@dimen/medium_text"
        android:text="@string/is_goalkeeper"/>

</LinearLayout>